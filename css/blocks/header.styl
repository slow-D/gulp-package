.header
	background-color #fff
	padding 20px 0
	position relative
	width 100%
	@media (max-width: 1280px)
		padding-right 5%
		padding-left 5%
		width auto
	&__contact
		// display none
		&--mobile-icons
			@media (max-width: 1280px)
				display flex
	&__contact--mobile
		// margin-top 15%
		padding 0 5%
		display flex
		flex-direction column
		align-items center
		.header__contact-person
			justify-content center
			margin-bottom 15px
		.header__menu-item
			color #fff
		&-icons
			display none
			align-items center
			&-item
				color primaryBlueColor
				width 25px
				height 25px
				display inline-block
				&:first-of-type
					margin-right 35px
					@media (max-width: 460px)
						margin-right 15px
				svg
					width 100%
		&--inside
			box-shadow 0 2px 6px -4px
	&__logo
		height 50px
		display inline-block
	&__menu
		display flex
		margin-left 0
		@media (max-width: 1280px)
			display none
		&-item
			display inline-block
			position relative
			color #595959
			font-size 18px
			margin-right 20px
			transition color .15s ease-out
			a
				display inherit
				font-size inherit
				color inherit
				text-decoration none
				width 100%
			&:hover
				color #ccc
				& .menu-inside
					opacity 1
					pointer-events all
			&--arrow
				position relative
				margin-right 25px
				@media (max-width: 460px)
					margin-right 0
				&:hover:after
					transform translateY(-50%) rotate3d(0, 0, 1, 137deg)
					border-color inherit
				&:after
					content ''
					position absolute
					display block
					border-bottom 1px solid currentColor
					border-left 1px solid currentColor
					right -10px
					top 50%
					height 5px
					width 5px
					transform translateY(-50%) rotate3d(0, 0, 1, -45deg)
					transform-origin 40% 70%
					transition transform .2s ease-out
		&--mobile
			display flex
			flex-direction column
			align-items center
			// padding-top 35px
			&-item
				color #fff
				font-size 18px
				text-decoration none
				&:not(:last-of-type)
					margin-bottom 25px
		&__contact-person
			margin-right 0
			.header__menu-item
				font-size 16px
				margin-left 7px
	&__contacts
		display flex
		flex-direction column
		align-items center
		@media (max-width: 1280px)
			display none
		&-item
			position relative
			font-size 18px
			text-decoration none
			color #3b5998
			font-weight 400
			line-height 1.2
			&:hover:after
				width 100%
			&:after
				content ''
				position absolute
				width 0
				left 0
				bottom -1px
				height 1px
				background-color currentColor
				transition width .2s linear
			&:not(:last-of-type)
				margin-bottom 8px
				
.menu-inside
	position absolute
	top 100%
	left -25px
	z-index 10
	background-color #fff
	padding 25px
	padding-top 35px
	white-space nowrap
	opacity 0
	pointer-events none
	transition opacity .1s ease-out
	&__item
		color #595959
		font-size 16px
		&:not(:last-of-type)
			margin-bottom 15px
		a
			color inherit
			font-size inherit
			text-decoration none
			transition color .15s ease-out
			&:hover
				color #ccc
				
.header.header--ny
	padding 15px 0
	@media (max-width: 1280px)
		padding 12.5px 15px
	.header__logo
		height 60px
		@media (max-width: 1280px)
			height 45px
		img
			height 100%