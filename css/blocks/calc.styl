#calc
	@media (max-width: 1280px)
		height auto
		padding-x 7%
	.col
		padding-top 0
		height 100%
		@media (max-width: 1280px)
			padding-y 10%
	.btn-primary
		@media (max-width: 460px)
			width 100%
		@media (max-width: 1280px)
			width auto
.calc
	color #fff
	background-color #1c325b
	h2
		color inherit
		margin 0
		font-size 90px
		font-weight 300
		line-height 1
		@media (max-width: 1280px)
			padding 0
			font-size 30px
			margin-bottom 25px
	&-wrap
		display flex
		align-items center
		justify-content center
		height 100%
		@media (max-width: 1280px)
			flex-direction column
		&__item
			width 50%
			height auto
			@media (max-width: 1280px)
				width 100%
	&-show
		width 100%
		height 450px
		margin-top 50px
		position relative
		// background-image url(pathImg'/images/karkas().png')
		background-repeat no-repeat
		background-size contain
		background-position 0 0
		@media (max-width: 1280px)
			display none
		&__item
			position absolute
			top 1%
			left 48%
			opacity 0
			width 85%
			transform translateX(-50%)
			transition opacity .2s ease-out
			&.is-show
				opacity 1
			&[src=""]
				background-color red
				width 100%
				height 415px
		&--empty:before
			content 'Выберите продукцию'
			position absolute
			top 150px
			left 0
			font-size 32px
			color #ef3737
			font-weight 600
			width 100%
			text-align center
	&-write
		padding-left 100px
		@media (max-width: 1280px)
			padding-left 0
		@media (min-width: 1919px)
			padding-left 155px
		&__item
			padding-bottom 15px
			&:nth-child(3)
				@media (max-width: 1280px)
					display none
			&-head
				color inherit
				margin 0
				font-weight 400
				font-size 16px
				margin-bottom 15px
				position relative
				&:before
					counter-increment section
					content counter(section)
					color #fff
					position absolute
					top 50%
					left -50px
					transform translateY(-50%)
					width 25px
					height 25px
					border-radius 50%
					border 1px solid primaryGoldColor
					display flex
					align-items center
					justify-content center
					font-weight inherit
					font-size inherit
					@media (max-width: 1280px)
						display none
				&--mode
					color inherit
					margin 0
					font-weight 400
					font-size 16px
					margin-bottom 15px
					margin-left 130px
					@media (max-width: 1280px)
						margin-left 34px
			&:not(:last-of-type)
				margin-bottom 15px


.aside-line
	position relative
	&:before
		content ''
		height calc(100%+15px)
		width 1px
		background-color primaryGoldColor
		position absolute
		top 0
		left -36.5px
		@media (max-width: 1280px)
			display none

			
.label-radio
	position relative
	cursor pointer
	display flex
	align-items center
	justify-content flex-start
	font-size 18px
	font-weight 600
	line-height 1
	@media (max-width: 1280px)
		font-size 16px
		line-height 1.3
	input[type="radio"]
		display none
		&:checked + .label-radio__btn
			background-color primaryGoldColor
			&:before
				height 6px
				width 6px
		&:disabled + .label-radio__btn
			background-color #adadad
	&__btn
		position relative
		display inline-block
		height 16px
		width 16px
		border-radius 50%
		background-color #fff
		margin-right 10px	
		transition background-color .1s linear
		&:before
			border-radius 50%
			content ''
			height 0
			width 0
			background-color #fff
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
			transition height .1s linear, width .1s linear


.input-text
	border none
	outline none
	height 60px
	padding-left 30px
	padding-right 30px
	background-color #fff
	border-radius 5px
	font-size 18px
	font-weight 600
	width 240px
	&--big
		width 500px
	&:disabled
		color disabledColor
	@media (max-width: 1280px)
		width 100%
		padding-x 15px
		height 50px


.form-col > *
	margin-bottom 13px
	@media (max-width: 1280px)
		margin-bottom 17px
	
	

.form-row
	display flex
	align-items flex-start
	div:not(:last-of-type)
		margin-right 20px
	& > *
		margin-right 30px
		&:nth-child(n+6)
			margin-top 7px
		&:nth-child(n+4)
			@media (max-width: 1280px)
				margin-top 7px
		@media (max-width: 1280px)
			margin-right 0
	& > .label-radio
		margin-right 25px
	

.calc-summa
	display flex
	align-items flex-end
	h4
		color inherit
		font-size 16px
		font-weight 400
		margin-right 10px
	&__price
		color primaryGoldColor
		font-size 30px
		font-weight 600
	&__desc
		color disabledColor
		font-size 12px
		font-weight 400
		margin-top 5px
		margin-bottom 20px

.error
	color red
	font-size 12px
	font-weight 400
	margin-top 7px

#EUR
	margin-bottom 20px
	display inline-block


.inside-db
	width 100%
	margin-right 0
	display none
	&.is-show-db
		display flex
	&--parthos
		flex-flow row wrap
		
.parthos-desc
	position absolute
	bottom -20px
	left 25px
	font-size 12px
	color primaryGoldColor
	font-weight 400
	opacity 0
	transform translateY(5px)
	transition .2s
	pointer-events none
	
.abs-img
	position absolute
	font-size 22px
	color primaryGoldColor
	font-weight 600
	width 150px
	&--width
		top 78.5%
		left 64%
		transform skewY(-10deg)
		@media (min-width: 1919px)
			top 83.5%
	&--height
		top 27%
		left -8.5%
		transform-origin center
		transform rotate(-90deg)
		@media (min-width: 1919px)
			top 30%
			left -8%


#wall-parthos:checked + .label-radio__btn + .parthos-desc
	opacity 1
	transform translateY(0)
	pointer-events all
	
.doors > .label-radio:last-child
	@media (max-width: 1280px)
		margin-top 0