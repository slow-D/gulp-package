#project
	.col
		height 100%
		position relative
.projects
	width 100%
	height calc(100% - 76px)
	position relative
	@media (max-width: 420px)
		height auto
	&:after
		content ''
		position absolute
		left 0
		bottom 0
		width 100%
		height 20%
		display block
		background-image linear-gradient(0deg, #000000 -25%, rgba(28,50,91,0) 70%)
	&-descripton
		color #fff
		position absolute
		top 5%
		left 5%
		padding 15px
		max-width 30%
		background-color rgba(28, 50, 91, 0.7)
		@media (max-width: 420px)
			top 0
			left 0
			width 100%
			max-width 100%
			background-color primaryBlueColor
			position relative
		h3
			margin 0
			margin-bottom 10px
			color inherit
			font-size 24px
			font-weight 600
			@media (max-width: 420px)
				font-size 18px
	&-item
		position relative
		width 100%
		height 100%
		img
			display inline-block
			width 100%
			height 100%


.siema-control
	position absolute
	color #b8b4bb
	top 55%
	transform translateY(-50%)
	height 50px
	width 50px
	background-color transparent
	cursor pointer
	z-index 10
	border 2px solid
	border-radius 50%
	padding 10px
	transition color .2s linear
	@media (max-width: 420px)
		display none
	&:hover
		color primaryBlueColor
	&--prev
		left 5%
	&--next
		right 5%
		svg
			transform rotate(180deg)
	svg
		width 100%


.dots
	position absolute
	left 50%
	transform translateX(-50%)
	bottom 5%
	display flex
	justify-content space-between
	z-index 1
.dot
	color #fff
	cursor pointer
	height 18px
	width 18px
	background-color transparent
	border-radius 50%
	border 1px solid
	position relative
	&:not(:last-of-type)
		margin-right 25px
		@media (max-width: 420px)
			margin-right 10px
	&:after
		content ''
		background-color #fff
		border-radius 50%
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)
		height 0
		width 0
		transition height .2s linear, width .2s linear
	&:hover:after
		height 50%
		width 50%
	&.is-active:after
		height 100%
		width 100%