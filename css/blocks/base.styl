html
	min-width 320px
	position relative
	&.scroll-locked
		overflow hidden
		body
			overflow hidden

body
	line-height 1
	color $baseFontColor
	min-width 320px
	position relative
	font-family "Montserrat", sans-serif
	counter-reset section

main
	background-color #fff

.global-overlay
	position fixed
	left 0px
	right 0px
	top 0px
	bottom 0px
	width 100%
	height 100%
	z-index 1999
	display none
	background-color rgba(#000,0.5)


h1, h2, h3, h4, h5, h6, .title
	color $baseFontColor
	line-height 1.28em
	// margin-top 1.5em
	// margin-bottom 0.8em
	font-weight 400
h1, .title
	font-size 24px
	margin-top 0.75em
	+above(sm)
		margin-top 0.3em
		font-size 36px
	+above(md)
		margin-top 0.2em
		font-size 48px
	+above(xl)
		font-size 64px
h2
	font-size 20px
	+above(sm)
		font-size 24px
	+above(md)
		font-size 30px
	+above(xl)
		font-size 36px
h3
	font-size 18px
	+above(sm)
		font-size 20px
	+above(md)
		font-size 24px
	+above(xl)
		font-size 30px
		
h4, h5, h6
	font-size 16px
	+above(sm)
		font-size 18px
	+above(md)
		font-size 20px
	+above(xl)
		font-size 24px


.img
	display block
	max-width 100%
	width auto !important





.hidden
	display none
  
.no-scroll
	overflow hidden
	touch-action none

.visible
	animation visible .5s .4s forwards
	&--text
		animation visible-text .5s .6s forwards
	&--gradient
		animation visible-gradient 1s ease-out .7s forwards
  
.avatar
	height 40px
	width 40px
	border-radius 50%
	background-image url('/assets/images/person.jpg')
	background-size cover
	background-repeat no-repeat
	margin-right 5px
  
.col
	max-width 1280px
	margin 0 auto
	@media (max-width: 1280px)
		max-width none
	@media (max-width: 1380px)
		max-width 1160px
	@media (min-width: 1919px)
		max-width 1360px
.row-flex
	display flex
	align-items center
	justify-content space-between

.link
	color #7f9edb
	font-size 16px
  
svg
	overflow auto
	height 100%
	width auto
	fill currentColor

.t-bold
	color #ead9bb
	font-size 20px
	font-weight bold
	line-height 1.5
	margin-bottom 50px
	opacity 0
	transform translateY(30px)

.btn-primary
	border 2px solid #ff9815
	color #363739
	background-image linear-gradient(to right, #ff8e07, #ff9815, #ffa220, #ffac2b, #ffb536)
	height 50px
	padding 0 35px
	font-size 18px
	font-weight 600
	text-decoration none
	display inline-flex
	align-items center
	justify-content center
	border-radius 25px
	box-shadow 0 3px 10px -3px #ff9815
	transition .15s linear
	&:hover
		background-image linear-gradient(to right, #fff, #fff, #fff, #fff, #fff)
		box-shadow 0 4px 10px -2px
	&:active
		box-shadow inset 0 0 10px -2px #000

.menu-bg
	// background-color red
	height 100%
	background-size auto 100%
	background-repeat no-repeat
	background-position center center

.main-inside
	padding-top 50px
	padding-bottom 100px
  	&__item
    	&-wrap
			display flex
			flex-flow row wrap
			justify-content space-between
      	&-item
        	&:nth-of-type(n+7)
          		margin-top 30px
	        img
				display inline-block
				margin-bottom 25px
	        figcaption
				font-size 18px
				font-weight 500
	    &:not(:last-of-type)
	    	margin-bottom 50px
	    h2
			color #363739
			font-size 42px
			font-weight 300
			margin-bottom 35px



  
.head--lk
	color #fff
	font-size 70px
	font-weight 100
	margin-bottom 50px
	opacity 0
	transform translateX(-50px)



#video-bg
	position relative
	overflow hidden
	z-index 1
	background #ffffff
	background-size cover
	min-width 100%
	height calc(100vh - 90px)
	min-height calc(100vh - 90px)
	@media (max-width: 460px)
		min-height calc(100vh - 70px)
		&:before
			content ''
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background-image linear-gradient(0deg, rgba(28, 50, 91, 1) 10%, rgba(28, 50, 91, 0) 75%)
.video-bg__overlay
	content ''
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color rgba(0, 0, 0, 0.35)
	z-index 0

#video-bg > video
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	z-index -2

@supports (object-fit: cover)
	#video-bg > video
		width 100%
		height calc(100vh - 90px)
		object-fit cover


.main
	height 100vh
	padding 5% 0
	min-height 768px
	@media (max-width: 460px)
		min-height auto
	&--sale
		height auto
		min-height auto
		background-color #1c325b
		.col
			padding-bottom 5%
			@media (max-width: 1280px)
				padding 0
	h2
		margin 0
		font-size 40px
		margin-bottom 25px
		@media (max-width: 460px)
			font-size 32px
			margin-bottom 15px
			// padding-left 15px




.main-section__head
	position relative
	display flex
	flex-direction column
	height 100%
	align-items flex-start
	justify-content center
	@media (max-width: 460px)
		justify-content center
	@media (max-width: 1280px)
		align-items center
		justify-content space-between
		padding 7%
	.btn-primary
		@media (max-width: 460px)
			width 100%
	
.main-section__social
	position absolute
	top 50%
	right 0
	transform translateY(-50%)
	display flex
	flex-direction column
	@media (max-width: 460px)
		margin-top 15%
	@media (max-width: 1280px)
		position relative
		top 0
		right 0
		transform translate(0,0)
		flex-direction row
		width 65%
		justify-content space-between
		margin-top 0
	&-item
		color rgba(255, 255, 255, 0.8)
		display inline-block
		height 30px
		width 30px
		transition .2s ease-out
		position relative
		@media (max-width: 1280px)
			height 25px
			width 25px
		svg
			position relative
			z-index 1
		&-link
			border-radius 50%
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
			display inline-block
			background-color #fff
			height 0
			width 0
			z-index -1
			transition .2s linear
		&:hover &-link
			height 50px
			width 50px
			@media (max-width: 1280px)
				height 40px
				width 40px
		&:not(:last-of-type)
			margin-right 5%
			margin-bottom 40px
			@media (max-width: 1280px)
				margin-bottom 0

.main-head
	color #fff
	font-size 67px
	font-weight 800
	text-transform uppercase
	margin-top 0
	margin-bottom 10px
	@media (max-width: 460px)
		font-size 36px
	@media (max-width: 1280px)
		font-size 46px
		text-align center
		margin-bottom 0
	&--text
		color #fff
		font-size 34px
		margin-bottom 100px
		margin-top 25px
		line-height 1.2
		@media (max-width: 460px)
			font-size 18px
			margin-bottom 10%
			margin-top 8%
		@media (max-width: 1280px)
			font-size 24px
			text-align center
			margin-bottom 0
			margin-top 0
			line-height 1.2


.block-menu
	display flex
	align-items flex-start
	justify-content space-between
	margin-bottom 100px
	&__item
		background-color primaryBlueColor
		width 31%
		box-shadow 0 8px 15px -7px
		padding-bottom 40px
		transition .15s linear
	&-img
		background-color #f4e4df
		height 250px
		margin-bottom 40px
	&-text
		padding 0 45px
		h2
			color #fff
			font-size 30px
			font-weight 600
			line-height 1.2
			margin-bottom 40px
			min-height 72px
	& .is-active
	&:hover
		box-shadow: 0 10px 30px -16px
		transform translateY(-7px)
		
.btn-up
	display flex
	align-items center
	justify-content center
	color #ffffff
	position fixed
	right 30px
	z-index 10
	bottom 30px
	height 50px
	width 50px
	background-color primaryGoldColor
	border-radius 50%
	cursor pointer
	padding 15px
	box-shadow 0 3px 7px -3px #000
	opacity 0
	transition opacity .15s ease-out, transform .15s ease-out
	transform translateX(80px)
	@media (max-width: 460px)
		right 20px
		bottom 60px
	&.is-show
		opacity 1
		transform translateX(0)
	svg
		height 100%
		width 100%
		

.wrap-about
	display flex
	// color #fff
	@media (max-width: 1280px)
		height auto
		flex-direction column
	&__item
		background-color #fff
		@media (max-width: 1280px)
			width 100%
	&--img
		// background-image url(pathImg'/images/about().jpg')
		background-repeat no-repeat
		background-size auto 100%
		background-position center
		width 45%
		@media (max-width: 1280px)
			background-size cover
		&:after
			@media (max-width: 1280px)
				content ''
				position absolute
				height 100%
				width 100%
				background-color rgba(59, 89, 152, 0.65)
		@media (max-width: 1280px)
			position absolute
			bottom 0
			height 350px
			order 1
			z-index 0
	&--content
		padding 2.5% 4% 3%
		width 55%
		display flex
		flex-direction column
		align-items flex-start
		justify-content space-between
		@media (max-width: 1280px)
			padding 10% 7%
		h2
			// color #fff
			margin 0
			font-weight 300
			font-size 62px
			@media (max-width: 1280px)
				padding-left 0
				padding 0
				order 0
				margin-bottom 30px
.about-text
	@media (max-width: 1280px)
		order 2
		z-index 2
		color #fff
	&__main
		font-size 20px
		font-weight 500
		line-height 1.4
		margin-bottom 20px
		@media (max-width: 1280px)
			font-size 16px
	&__more
		font-size 18px
		line-height 1.4
		font-weight 400
		margin-bottom 20px
		@media (max-width: 1280px)
			font-size 14px
	a
		color gray
		font-size 18px
		text-decoration none
		@media (max-width: 1280px)
			font-size 16px
			color #fff
			text-decoration underline

.about-icon
	color primaryGoldColor
	display flex
	flex-flow row wrap
	@media (max-width: 1280px)
		order 1
		justify-content space-between
		margin-bottom 20%
		width 100%
	&__item
		width 30%
		display flex
		flex-direction column
		.icon
			height 60px
			width 60px
			margin-bottom 15px
			@media (max-width: 1280px)
				height 45px
				width 45px
		&:nth-child(n+4)
			margin-top 25px
		&-desc
			line-height 1.4
			@media (max-width: 1280px)
				font-size 11px
				line-height 1.3

.new-year-block
	background-image url(pathImg'/images/new-year.png')
	background-size contain
	position absolute
	top 0
	left 0
	width 100%
	min-height 45px
	height 8vh
	@media (max-width: 1280px)
		background-repeat no-repeat
		background-size cover
	@media (min-width: 1919px)
		height 173px
		background-repeat no-repeat
		background-size 100% auto