html
	min-width 320px
	position relative
	&.scroll-locked
		overflow hidden
		body
			overflow hidden
body
	set('font-size', 14px 16px n n 18px n)
	set('line-height', 1.35em 1.37em n n 1.38em n)
	color $baseFontColor
	min-width 320px
	position relative
.body
	display flex
	position relative
	flex-direction column
	justify-content space-between
	min-height 100%
	padding 0px
	margin 0px
	&__content
		flex 1 1 auto
		position relative
		z-index 0
	.footer, .header
		flex 0 0 auto
.global-overlay
	position fixed
	left 0px
	right 0px
	top 0px
	bottom 0px
	width 100%
	height 100%
	z-index 1999
	display none
	background-color rgba(#000,0.5)
	
