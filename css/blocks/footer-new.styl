.footer
	padding 40px 0
	// background-color #0b1a37
	background-color #fff
	@media (max-width: 1280px)
		padding-x 7%
	&-wrap
		display flex
		justify-content space-between
		@media (max-width: 1280px)
			flex-flow row wrap
	&-item
		width 23%
		@media (max-width: 1280px)
			width 50%
		&:nth-child(n+3)
			@media (max-width: 1280px)
				margin-top 30px
		h4
			color inherit
			margin 0
			text-transform uppercase
			font-weight 600
			font-size 14px
			margin-bottom 25px
		&-wrap
			display flex
			flex-direction column
	&-nav
		// color gray
		color #373737
		font-size 14px
		font-weight 500
		text-decoration none
		line-height 1.3
		&:hover
			text-decoration underline
		&:not(:last-of-type)
			margin-bottom 15px
		@media (max-width: 1280px)
			font-size 13px
		&--icon
			display flex
			.icon
				display inline-block
				height 15px
				width 15px
				margin-right 5px
			div
				width 90%
	&-down
		margin-top 40px
		color #c1904d
		font-size 18px
		font-weight 500
		display flex
		justify-content space-between
		align-items center
		@media (max-width: 1280px)
			flex-direction column
			font-size 16px
	&__social
		display flex
		align-items center
		@media (max-width: 1280px)
			margin-top 20px
		&-item
			display inline-block
			height 25px
			width 25px
			color #c1904d
			&:not(:last-of-type)
				margin-right 25px
				
.nowrap
	white-space nowrap